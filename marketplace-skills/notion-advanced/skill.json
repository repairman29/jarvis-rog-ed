{
  "name": "notion-advanced",
  "version": "1.0.0",
  "displayName": "Notion Advanced Pro",
  "description": "AI-powered Notion automation with intelligent page generation, database management, and cross-workspace synchronization",
  "author": "JARVIS Marketplace",
  "category": "productivity",
  "tags": ["notion", "ai", "automation", "database", "notes"],
  "pricing": {
    "type": "subscription",
    "price": 14.99,
    "currency": "USD",
    "interval": "month",
    "trialDays": 7
  },
  "platforms": ["macos", "windows", "linux"],
  "marketplaceInfo": {
    "featured": true,
    "verified": true,
    "minimumJarvisVersion": "1.0.0",
    "screenshots": ["notion-workflow.png", "ai-generation.png", "database-sync.png"],
    "videoDemo": "notion-advanced-demo.mp4"
  },
  "env": [
    "NOTION_API_KEY",
    "NOTION_WORKSPACE_ID",
    "JARVIS_AI_API_KEY",
    "NOTION_ADVANCED_LICENSE_KEY"
  ],
  "dependencies": {
    "required": ["workflow-automation", "file-search"],
    "optional": ["voice-control", "snippets"],
    "conflicts": ["basic-notion"]
  },
  "permissions": {
    "network": ["*.notion.com", "api.notion.com"],
    "fileSystem": {"read": ["~/Documents/Notion"], "write": ["~/.jarvis/notion-cache"]},
    "otherSkills": ["workflow-automation", "file-search", "snippets"]
  },
  "tools": [
    {
      "name": "ai_page_generator",
      "description": "Generate Notion pages using AI based on prompts, templates, or content analysis",
      "parameters": {
        "type": "object",
        "properties": {
          "prompt": {
            "type": "string",
            "description": "Natural language description of page to create"
          },
          "template": {
            "type": "string",
            "description": "Template type for page generation",
            "enum": ["meeting_notes", "project_plan", "knowledge_base", "task_list", "documentation", "report", "custom"]
          },
          "workspace": {
            "type": "string",
            "description": "Target Notion workspace ID (optional)"
          },
          "database": {
            "type": "string",
            "description": "Target database to add page to"
          },
          "aiModel": {
            "type": "string",
            "description": "AI model for content generation",
            "enum": ["gpt-4", "claude-3", "gemini-pro"],
            "default": "gpt-4"
          },
          "includeProperties": {
            "type": "boolean",
            "description": "Auto-fill database properties based on content",
            "default": true
          },
          "contentLength": {
            "type": "string",
            "description": "Desired content length",
            "enum": ["brief", "detailed", "comprehensive"],
            "default": "detailed"
          }
        },
        "required": ["prompt"]
      }
    },
    {
      "name": "smart_database_manager",
      "description": "Intelligently manage Notion databases with AI-powered organization and automation",
      "parameters": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "description": "Database management action",
            "enum": ["create", "update", "query", "optimize", "sync", "backup", "analyze"]
          },
          "databaseId": {
            "type": "string",
            "description": "Target database ID"
          },
          "query": {
            "type": "object",
            "description": "Query parameters for database operations",
            "additionalProperties": true
          },
          "aiOptimization": {
            "type": "boolean",
            "description": "Use AI for database structure optimization",
            "default": true
          },
          "autoTagging": {
            "type": "boolean",
            "description": "Automatically tag and categorize content",
            "default": true
          },
          "smartFilters": {
            "type": "boolean",
            "description": "Create AI-suggested filters and views",
            "default": true
          }
        },
        "required": ["action"]
      }
    },
    {
      "name": "workspace_sync",
      "description": "Synchronize content and workflows across multiple Notion workspaces",
      "parameters": {
        "type": "object",
        "properties": {
          "sourceWorkspace": {
            "type": "string",
            "description": "Source workspace ID"
          },
          "targetWorkspaces": {
            "type": "array",
            "description": "Target workspace IDs for sync",
            "items": {"type": "string"}
          },
          "syncType": {
            "type": "string",
            "description": "Type of synchronization",
            "enum": ["templates", "databases", "pages", "properties", "full"],
            "default": "templates"
          },
          "conflictResolution": {
            "type": "string",
            "description": "How to handle sync conflicts",
            "enum": ["skip", "overwrite", "merge", "prompt"],
            "default": "prompt"
          },
          "schedule": {
            "type": "object",
            "description": "Automatic sync schedule",
            "properties": {
              "enabled": {"type": "boolean"},
              "frequency": {"type": "string", "enum": ["hourly", "daily", "weekly"]},
              "time": {"type": "string"}
            }
          }
        },
        "required": ["sourceWorkspace", "targetWorkspaces"]
      }
    },
    {
      "name": "content_intelligence",
      "description": "AI-powered content analysis, summarization, and enhancement for Notion pages",
      "parameters": {
        "type": "object",
        "properties": {
          "pageId": {
            "type": "string",
            "description": "Target page ID for analysis"
          },
          "analysisType": {
            "type": "string",
            "description": "Type of content analysis",
            "enum": ["summarize", "enhance", "extract_tasks", "generate_outline", "fact_check", "suggest_improvements"]
          },
          "outputFormat": {
            "type": "string",
            "description": "Format for analysis results",
            "enum": ["inline", "new_page", "comment", "property_update"],
            "default": "inline"
          },
          "aiModel": {
            "type": "string",
            "description": "AI model for analysis",
            "enum": ["gpt-4", "claude-3", "gemini-pro"],
            "default": "gpt-4"
          }
        },
        "required": ["pageId", "analysisType"]
      }
    },
    {
      "name": "workflow_automation",
      "description": "Create automated workflows for Notion with triggers, conditions, and actions",
      "parameters": {
        "type": "object",
        "properties": {
          "workflowName": {
            "type": "string",
            "description": "Name for the workflow"
          },
          "trigger": {
            "type": "object",
            "description": "Workflow trigger configuration",
            "properties": {
              "type": {"type": "string", "enum": ["page_created", "page_updated", "property_changed", "schedule", "manual"]},
              "filter": {"type": "object"},
              "schedule": {"type": "string"}
            }
          },
          "actions": {
            "type": "array",
            "description": "Actions to perform when workflow triggers",
            "items": {
              "type": "object",
              "properties": {
                "type": {"type": "string"},
                "parameters": {"type": "object"}
              }
            }
          },
          "aiEnhancement": {
            "type": "boolean",
            "description": "Use AI to optimize workflow performance",
            "default": true
          }
        },
        "required": ["workflowName", "trigger", "actions"]
      }
    }
  ]
}