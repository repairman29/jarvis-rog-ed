{
  "name": "github-copilot-plus",
  "version": "1.0.0",
  "displayName": "GitHub Copilot++ Pro",
  "description": "Advanced GitHub automation with AI-powered code analysis, workflow optimization, and intelligent repository management",
  "author": "JARVIS Marketplace",
  "category": "development",
  "tags": ["github", "ai", "development", "automation", "copilot", "workflow"],
  "pricing": {
    "type": "subscription",
    "price": 19.99,
    "currency": "USD", 
    "interval": "month",
    "trialDays": 14
  },
  "platforms": ["macos", "windows", "linux"],
  "marketplaceInfo": {
    "featured": true,
    "verified": true,
    "premiumTier": true,
    "minimumJarvisVersion": "1.0.0",
    "targetAudience": ["developers", "devops", "technical-teams"],
    "screenshots": ["code-analysis.png", "pr-automation.png", "workflow-optimization.png"],
    "videoDemo": "github-copilot-plus-demo.mp4"
  },
  "env": [
    "GITHUB_TOKEN",
    "GITHUB_COPILOT_PLUS_LICENSE",
    "OPENAI_API_KEY",
    "GITHUB_ENTERPRISE_URL"
  ],
  "dependencies": {
    "required": ["workflow-automation", "file-search", "launcher"],
    "optional": ["voice-control", "performance-monitor"],
    "conflicts": ["basic-github"]
  },
  "permissions": {
    "network": ["*.github.com", "api.github.com", "*.githubusercontent.com"],
    "fileSystem": {
      "read": ["~/Projects", "~/Development", "~/.git"], 
      "write": ["~/.jarvis/github-cache", "~/.jarvis/code-analysis"]
    },
    "systemCommands": ["git", "gh"],
    "otherSkills": ["workflow-automation", "file-search", "launcher"]
  },
  "tools": [
    {
      "name": "ai_code_analysis", 
      "description": "Advanced AI-powered code analysis with suggestions for optimization, security, and best practices",
      "parameters": {
        "type": "object",
        "properties": {
          "analysisType": {
            "type": "string",
            "description": "Type of code analysis to perform",
            "enum": ["security", "performance", "best_practices", "bugs", "documentation", "testing", "architecture", "comprehensive"]
          },
          "repository": {
            "type": "string",
            "description": "Repository to analyze (owner/repo format)"
          },
          "filePath": {
            "type": "string", 
            "description": "Specific file to analyze (optional)"
          },
          "branch": {
            "type": "string",
            "description": "Branch to analyze (default: main/master)",
            "default": "main"
          },
          "aiModel": {
            "type": "string",
            "description": "AI model for analysis",
            "enum": ["gpt-4", "claude-3", "codex", "local-llm"],
            "default": "gpt-4"
          },
          "outputFormat": {
            "type": "string",
            "description": "Format for analysis results",
            "enum": ["markdown", "github_issue", "pr_comment", "json", "interactive"],
            "default": "markdown"
          },
          "severity": {
            "type": "string",
            "description": "Minimum severity level for findings",
            "enum": ["info", "warning", "error", "critical"],
            "default": "warning"
          }
        },
        "required": ["analysisType"]
      }
    },
    {
      "name": "intelligent_pr_management",
      "description": "AI-enhanced pull request creation, review, and management with automated workflows",
      "parameters": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "description": "PR management action",
            "enum": ["create", "review", "merge_analysis", "conflict_resolution", "auto_update", "quality_check"]
          },
          "repository": {
            "type": "string",
            "description": "Target repository (owner/repo)"
          },
          "prNumber": {
            "type": "number",
            "description": "Pull request number (for existing PR operations)"
          },
          "baseBranch": {
            "type": "string",
            "description": "Base branch for PR",
            "default": "main"
          },
          "headBranch": {
            "type": "string",
            "description": "Head branch for PR"
          },
          "aiReviewLevel": {
            "type": "string",
            "description": "Depth of AI review",
            "enum": ["quick", "thorough", "comprehensive"],
            "default": "thorough"
          },
          "autoMergeRules": {
            "type": "object",
            "description": "Rules for automatic merging",
            "properties": {
              "requiresApproval": {"type": "boolean"},
              "minApprovers": {"type": "number"},
              "blockingChecks": {"type": "array", "items": {"type": "string"}},
              "aiConfidenceThreshold": {"type": "number"}
            }
          },
          "generateCommitMessage": {
            "type": "boolean",
            "description": "Generate AI commit messages",
            "default": true
          }
        },
        "required": ["action", "repository"]
      }
    },
    {
      "name": "repository_intelligence",
      "description": "Advanced repository analytics, health monitoring, and optimization recommendations",
      "parameters": {
        "type": "object",
        "properties": {
          "repository": {
            "type": "string",
            "description": "Repository to analyze (owner/repo)"
          },
          "analysisDepth": {
            "type": "string",
            "description": "Depth of repository analysis",
            "enum": ["overview", "detailed", "comprehensive", "enterprise"],
            "default": "detailed"
          },
          "metrics": {
            "type": "array",
            "description": "Specific metrics to analyze",
            "items": {
              "type": "string",
              "enum": ["code_quality", "security", "performance", "documentation", "testing", "dependencies", "activity", "collaboration"]
            }
          },
          "timeframe": {
            "type": "string",
            "description": "Time period for analysis",
            "enum": ["week", "month", "quarter", "year", "all"],
            "default": "month"
          },
          "includeRecommendations": {
            "type": "boolean",
            "description": "Include AI-powered improvement recommendations",
            "default": true
          },
          "generateReport": {
            "type": "boolean",
            "description": "Generate comprehensive report file",
            "default": false
          }
        },
        "required": ["repository"]
      }
    },
    {
      "name": "workflow_optimization",
      "description": "Optimize GitHub Actions workflows with AI analysis and performance improvements",
      "parameters": {
        "type": "object",
        "properties": {
          "repository": {
            "type": "string",
            "description": "Repository containing workflows"
          },
          "workflowFile": {
            "type": "string",
            "description": "Specific workflow file to optimize"
          },
          "optimizationGoals": {
            "type": "array",
            "description": "Optimization objectives",
            "items": {
              "type": "string",
              "enum": ["speed", "cost", "reliability", "maintainability", "security"]
            },
            "default": ["speed", "reliability"]
          },
          "analysisLevel": {
            "type": "string", 
            "description": "Level of workflow analysis",
            "enum": ["basic", "advanced", "enterprise"],
            "default": "advanced"
          },
          "applyOptimizations": {
            "type": "boolean",
            "description": "Automatically apply safe optimizations",
            "default": false
          },
          "createPR": {
            "type": "boolean",
            "description": "Create PR with optimization suggestions",
            "default": true
          }
        },
        "required": ["repository"]
      }
    },
    {
      "name": "commit_intelligence",
      "description": "AI-powered commit message generation, analysis, and workflow automation",
      "parameters": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "description": "Commit intelligence action",
            "enum": ["generate_message", "analyze_history", "suggest_improvements", "auto_commit", "batch_commit"]
          },
          "repository": {
            "type": "string",
            "description": "Target repository"
          },
          "commitMessage": {
            "type": "string",
            "description": "Base commit message for enhancement"
          },
          "messageStyle": {
            "type": "string",
            "description": "Commit message style preference",
            "enum": ["conventional", "detailed", "brief", "team_standard"],
            "default": "conventional"
          },
          "includeContext": {
            "type": "boolean",
            "description": "Include code context in commit message",
            "default": true
          },
          "aiSuggestions": {
            "type": "boolean", 
            "description": "Include AI suggestions for commit improvements",
            "default": true
          }
        },
        "required": ["action"]
      }
    },
    {
      "name": "issue_automation",
      "description": "Intelligent GitHub issue management with AI categorization and workflow automation", 
      "parameters": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "description": "Issue management action",
            "enum": ["create", "analyze", "categorize", "assign", "close_stale", "duplicate_detection", "priority_scoring"]
          },
          "repository": {
            "type": "string",
            "description": "Target repository"
          },
          "issueNumber": {
            "type": "number",
            "description": "Specific issue number (for individual issue operations)"
          },
          "aiCategorization": {
            "type": "boolean",
            "description": "Use AI for automatic categorization and labeling",
            "default": true
          },
          "priorityScoring": {
            "type": "boolean",
            "description": "Generate AI-powered priority scores",
            "default": true
          },
          "autoAssignment": {
            "type": "boolean",
            "description": "Automatically assign issues based on expertise",
            "default": false
          },
          "templateGeneration": {
            "type": "boolean",
            "description": "Generate issue templates from descriptions",
            "default": true
          }
        },
        "required": ["action", "repository"]
      }
    },
    {
      "name": "dependency_guardian",
      "description": "Advanced dependency management with security scanning and intelligent updates",
      "parameters": {
        "type": "object",
        "properties": {
          "repository": {
            "type": "string", 
            "description": "Repository to analyze dependencies"
          },
          "scanType": {
            "type": "string",
            "description": "Type of dependency scan",
            "enum": ["security", "outdated", "unused", "license", "size", "comprehensive"],
            "default": "comprehensive"
          },
          "updateStrategy": {
            "type": "string",
            "description": "How to handle dependency updates",
            "enum": ["conservative", "balanced", "aggressive", "ai_recommended"],
            "default": "ai_recommended"
          },
          "autoUpdate": {
            "type": "boolean",
            "description": "Automatically apply safe updates",
            "default": false
          },
          "createPRs": {
            "type": "boolean",
            "description": "Create PRs for dependency updates",
            "default": true
          },
          "securityPriority": {
            "type": "string",
            "description": "Security update priority",
            "enum": ["low", "medium", "high", "critical"],
            "default": "high"
          }
        },
        "required": ["repository"]
      }
    }
  ]
}