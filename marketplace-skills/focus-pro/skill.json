{
  "name": "focus-pro",
  "version": "1.0.0",
  "displayName": "Focus Pro - AI Productivity Optimization",
  "description": "Advanced focus and productivity optimization with AI-powered distraction blocking, work session analysis, and intelligent environment control",
  "author": "JARVIS Marketplace",
  "category": "productivity",
  "tags": ["focus", "productivity", "distraction-blocking", "ai", "optimization", "wellness"],
  "pricing": {
    "type": "subscription",
    "price": 9.99,
    "currency": "USD",
    "interval": "month",
    "trialDays": 14
  },
  "platforms": ["macos", "windows", "linux"],
  "marketplaceInfo": {
    "featured": true,
    "verified": true,
    "popularChoice": true,
    "minimumJarvisVersion": "1.0.0",
    "targetAudience": ["knowledge-workers", "students", "remote-workers", "entrepreneurs"],
    "screenshots": ["focus-dashboard.png", "distraction-blocking.png", "productivity-analytics.png"],
    "videoDemo": "focus-pro-demo.mp4"
  },
  "env": [
    "FOCUS_PRO_LICENSE_KEY",
    "JARVIS_AI_API_KEY",
    "FOCUS_PRO_ANALYTICS_ENABLED",
    "FOCUS_PRO_VOICE_ENABLED"
  ],
  "dependencies": {
    "required": ["launcher", "window-manager", "workflow-automation"],
    "optional": ["voice-control", "performance-monitor", "calculator"],
    "conflicts": ["basic-focus-mode"]
  },
  "permissions": {
    "network": ["api.focus-analytics.com", "*.productivity-metrics.com"],
    "fileSystem": {
      "read": ["~/Library/Application Support/Focus", "~/Documents"],
      "write": ["~/.jarvis/focus-data", "~/.jarvis/productivity-reports"]
    },
    "systemCommands": ["caffeinate", "do-not-disturb"],
    "otherSkills": ["launcher", "window-manager", "workflow-automation", "voice-control"]
  },
  "tools": [
    {
      "name": "intelligent_focus_mode",
      "description": "AI-powered focus mode that adapts to work type, environment, and productivity patterns",
      "parameters": {
        "type": "object",
        "properties": {
          "focusType": {
            "type": "string", 
            "description": "Type of focus session",
            "enum": ["deep_work", "creative", "administrative", "learning", "meeting_prep", "custom"]
          },
          "duration": {
            "type": "number",
            "description": "Focus session duration in minutes",
            "default": 25
          },
          "intensity": {
            "type": "string",
            "description": "Focus intensity level",
            "enum": ["light", "moderate", "intense", "maximum", "adaptive"],
            "default": "adaptive"
          },
          "environment": {
            "type": "object",
            "description": "Environment configuration",
            "properties": {
              "blockedApps": {"type": "array", "items": {"type": "string"}},
              "allowedApps": {"type": "array", "items": {"type": "string"}},
              "websiteBlocking": {"type": "boolean"},
              "notificationControl": {"type": "boolean"},
              "audioEnvironment": {"type": "string", "enum": ["silence", "white_noise", "nature", "focus_music", "custom"]}
            }
          },
          "adaptiveSettings": {
            "type": "boolean",
            "description": "Use AI to adapt settings based on productivity patterns",
            "default": true
          }
        }
      }
    },
    {
      "name": "distraction_analytics",
      "description": "Comprehensive analysis of distraction patterns with AI-powered optimization recommendations",
      "parameters": {
        "type": "object",
        "properties": {
          "analysisType": {
            "type": "string",
            "description": "Type of distraction analysis",
            "enum": ["daily", "weekly", "app_usage", "website_tracking", "interruption_patterns", "comprehensive"]
          },
          "timeframe": {
            "type": "string",
            "description": "Time period for analysis",
            "enum": ["today", "week", "month", "quarter", "custom"],
            "default": "week"
          },
          "includeRecommendations": {
            "type": "boolean",
            "description": "Include AI optimization recommendations",
            "default": true
          },
          "privacyLevel": {
            "type": "string",
            "description": "Privacy level for data collection",
            "enum": ["minimal", "balanced", "detailed"],
            "default": "balanced"
          },
          "generateReport": {
            "type": "boolean",
            "description": "Generate detailed productivity report",
            "default": true
          }
        }
      }
    },
    {
      "name": "productivity_optimization", 
      "description": "AI-powered productivity optimization with personalized recommendations and automatic improvements",
      "parameters": {
        "type": "object",
        "properties": {
          "optimizationType": {
            "type": "string",
            "description": "Type of optimization to perform",
            "enum": ["schedule", "environment", "habits", "tools", "workflows", "comprehensive"]
          },
          "userProfile": {
            "type": "object",
            "description": "User productivity profile",
            "properties": {
              "workType": {"type": "string"},
              "peakHours": {"type": "array", "items": {"type": "number"}},
              "preferredWorkStyle": {"type": "string"},
              "currentChallenges": {"type": "array", "items": {"type": "string"}}
            }
          },
          "goals": {
            "type": "array",
            "description": "Productivity goals to optimize for",
            "items": {
              "type": "string",
              "enum": ["focus_duration", "task_completion", "distraction_reduction", "energy_management", "work_life_balance"]
            }
          },
          "aiPersonalization": {
            "type": "boolean",
            "description": "Use AI for personalized optimization",
            "default": true
          },
          "implementationLevel": {
            "type": "string",
            "description": "How aggressively to implement changes",
            "enum": ["suggestions_only", "gradual", "immediate", "user_controlled"],
            "default": "gradual"
          }
        }
      }
    },
    {
      "name": "focus_session_manager",
      "description": "Intelligent focus session management with adaptive timing, break optimization, and performance tracking",
      "parameters": {
        "type": "object",
        "properties": {
          "sessionType": {
            "type": "string",
            "description": "Type of focus session",
            "enum": ["pomodoro", "deep_work", "creative_flow", "administrative", "learning", "custom"]
          },
          "adaptiveTiming": {
            "type": "boolean", 
            "description": "Use AI to optimize session and break lengths",
            "default": true
          },
          "environmentControl": {
            "type": "object",
            "description": "Automated environment optimization",
            "properties": {
              "lighting": {"type": "string", "enum": ["bright", "dim", "adaptive"]},
              "audio": {"type": "string", "enum": ["silent", "white_noise", "focus_music"]},
              "temperature": {"type": "string", "enum": ["cool", "comfortable", "warm"]},
              "distractions": {"type": "string", "enum": ["block_all", "work_only", "minimal", "custom"]}
            }
          },
          "performanceTracking": {
            "type": "boolean",
            "description": "Track focus quality and productivity metrics",
            "default": true
          },
          "aiCoaching": {
            "type": "boolean",
            "description": "Provide AI-powered focus coaching and tips",
            "default": true
          }
        }
      }
    },
    {
      "name": "wellness_integration",
      "description": "Integrate wellness and health data for optimal productivity scheduling and break management",
      "parameters": {
        "type": "object",
        "properties": {
          "dataSource": {
            "type": "string",
            "description": "Health data source",
            "enum": ["apple_health", "google_fit", "fitbit", "manual_input", "smart_watch"],
            "default": "apple_health"
          },
          "metrics": {
            "type": "array",
            "description": "Health metrics to consider",
            "items": {
              "type": "string",
              "enum": ["sleep_quality", "stress_level", "heart_rate", "activity_level", "caffeine_intake"]
            }
          },
          "optimization": {
            "type": "string",
            "description": "How to use health data for optimization",
            "enum": ["schedule_adjustment", "break_timing", "intensity_modulation", "environment_control"],
            "default": "schedule_adjustment"
          },
          "privacyLevel": {
            "type": "string",
            "description": "Privacy level for health data",
            "enum": ["anonymous", "aggregated", "detailed"],
            "default": "aggregated"
          }
        }
      }
    },
    {
      "name": "team_productivity",
      "description": "Team-wide productivity optimization with collaboration analytics and shared focus management",
      "parameters": {
        "type": "object",
        "properties": {
          "teamId": {
            "type": "string",
            "description": "Team identifier for collaboration features"
          },
          "analysisType": {
            "type": "string",
            "description": "Type of team analysis",
            "enum": ["collaboration_patterns", "focus_synchronization", "productivity_metrics", "meeting_optimization"]
          },
          "privacyMode": {
            "type": "string",
            "description": "Team data privacy level",
            "enum": ["individual_only", "anonymized_aggregate", "team_visible"],
            "default": "anonymized_aggregate"
          },
          "sharedGoals": {
            "type": "array",
            "description": "Team productivity goals",
            "items": {"type": "string"}
          },
          "meetingOptimization": {
            "type": "boolean",
            "description": "Optimize team meeting schedules for focus time",
            "default": true
          }
        },
        "required": ["teamId", "analysisType"]
      }
    }
  ]
}